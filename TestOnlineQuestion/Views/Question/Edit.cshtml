@model TestOnlineQuestion.Models.Question
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Chỉnh sửa câu hỏi</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.QuestionText, "Câu hỏi")
        @Html.EditorFor(model => model.QuestionText, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TopicId, "Chủ đề")
        @Html.DropDownList("TopicId", (SelectList)ViewBag.TopicId, "Chọn chủ đề", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DifficultyLevel, "Độ khó")
        @Html.DropDownList("DifficultyLevel", new SelectList(new List<Object>
        {
            new { value = "1", text = "Mức độ 1" },
            new { value = "2", text = "Mức độ 2" },
            new { value = "3", text = "Mức độ 3" }
        }, "value", "text"), "Chọn mức độ", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Answer1, "Câu trả lời 1")
        @Html.EditorFor(model => model.Answer1, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Answer2, "Câu trả lời 2")
        @Html.EditorFor(model => model.Answer2, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Answer3, "Câu trả lời 3")
        @Html.EditorFor(model => model.Answer3, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Answer4, "Câu trả lời 4")
        @Html.EditorFor(model => model.Answer4, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CorrectAnswer, "Đáp án đúng")
        @Html.DropDownList("CorrectAnswer", new SelectList(new List<Object>
        {
            new { value = 1, text = "Câu trả lời 1" },
            new { value = 2, text = "Câu trả lời 2" },
            new { value = 3, text = "Câu trả lời 3" },
            new { value = 4, text = "Câu trả lời 4" }
        }, "value", "text"), "Chọn câu trả lời đúng", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
}

@Html.ActionLink("Trở về trang trước", "Index")

@model TestOnlineQuestion.Models.Question

@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xóa câu hỏi</h2>

<h3>Bạn có muốn xóa câu hỏi này?</h3>
<div>
    <h4>Câu hỏi</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Câu hỏi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt>
            Tên chủ đề
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Topic.Name)
        </dd>
        <dt>
            Độ khó
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DifficultyLevel)
        </dd>
        <dt>
            Số câu hỏi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CorrectAnswer)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận" class="btn btn-danger" />
            @Html.ActionLink("Quay trở lại", "Index")
        </div>
    }
</div>

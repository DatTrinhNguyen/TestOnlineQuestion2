@model TestOnlineQuestion.Models.Contest

<h2>Chỉnh sửa thông tin cuộc thi</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Tên cuộc thi")
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TopicId, "Tên chủ đề")
        @Html.DropDownList("TopicId", ViewBag.TopicList as SelectList, "Chọn chủ đề", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DifficultyLevel, "Độ khó")
        @Html.DropDownList("DifficultyLevel", new SelectList(new List<Object>
        {
            new { value = "1", text = "Mức độ 1" },
            new { value = "2", text = "Mức độ 2" },
            new { value = "3", text = "Mức độ 3" }
        }, "value", "text"), "Chọn mức độ", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QuestionCount, "Số câu hỏi")
        @Html.EditorFor(model => model.QuestionCount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
}

@Html.ActionLink("Trở về trang trước", "Index")

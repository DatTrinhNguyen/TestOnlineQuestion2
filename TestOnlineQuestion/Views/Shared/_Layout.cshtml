<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-image: url('../../content/image/quiz_800x450.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Quiz Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @* <li>@Html.ActionLink("Tài khoản", "AccountInfo", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                       <li>@Html.ActionLink("Quản lý tài khoản", "ManageUsers", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                       <li>@Html.ActionLink("Chủ đề", "Index", "Topic", new { area = "" }, new { @class = "nav-link" })</li>
                       <li>@Html.ActionLink("Cuộc thi", "Index", "ManageContest", new { area = "" }, new { @class = "nav-link" })</li>
                       <li>@Html.ActionLink("Câu hỏi", "Index", "Question", new { area = "" }, new { @class = "nav-link" })</li>
                       <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>*@
                    <li>@Html.ActionLink("Sign In", "UserLogin", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sign Up", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>              
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
